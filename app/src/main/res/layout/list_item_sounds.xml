<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
     xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:app="http://schemas.android.com/apk/res-auto"
     android:layout_height="50dp"
     android:layout_width="match_parent">

    <com.malinskiy.materialicons.widget.IconButton
         android:layout_height="match_parent"
         android:layout_width="50dp"
         android:visibility="gone"
         android:background="?android:attr/selectableItemBackground"
         android:textSize="30sp"
         android:layout_alignParentLeft="true"
         android:textColor="#000000"
         android:text="{zmdi-close}"
         android:id="@+id/buttonClose" />

    <TextView
         android:layout_height="match_parent"
         android:layout_width="wrap_content"
         android:gravity="center"
         android:layout_centerVertical="true"
         android:layout_toRightOf="@id/buttonClose"
         android:textSize="18sp"
         android:layout_marginLeft="10dp"
         android:id="@+id/textSoundName" />

    <com.malinskiy.materialicons.widget.IconButton
         android:layout_height="match_parent"
         android:layout_width="50dp"
         android:background="?android:attr/selectableItemBackground"
         android:textSize="30sp"
         android:textColor="#000000"
         android:layout_alignParentRight="true"
         android:text="{zmdi-play}"
         android:id="@+id/buttonPlayItem" />

    <View
         android:layout_height="1px"
         android:layout_width="match_parent"
         android:background="#55000000"
         android:layout_alignParentBottom="true"
         android:id="@+id/dividerConfig" />

</RelativeLayout>